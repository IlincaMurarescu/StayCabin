<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StayCabin - search results</title>
    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/style-feed.css" />
    <link rel="stylesheet" href="/styles/style-navbar.css" />
  </head>
  <body>
    <nav class="navbar">
      <!--  Logo -->
      <a class="navbar-brand" href="../index.ejs">
        <img src="../img/logo.PNG" alt="Logo" />
      </a>
      <!--  Avatar -->
      <button class="btn" type="button" onclick="location.href='/profile';">
        <img class="profile-icon" src="../img/avatar.png" alt="Profile Icon" />
      </button>
    </nav>
    <div class="main-container">
      <% cabins.forEach((cabin) => { %>
      <div
        class="card"
        onclick="window.location.href='/cabindetail/<%= cabin.id %>'"
      >
        <img
          src="<%= cabin.photos[0] %>"
          alt="<%= cabin.name %>"
          class="card-image"
        />
        <div class="card-content">
          <p class="card-title"><%= cabin.name %></p>
          <p class="card-subtitle"><%= cabin.description %></p>
        </div>
      </div>
      <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
